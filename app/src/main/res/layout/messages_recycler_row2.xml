<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/textRecyclerUsername2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline92"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageRecyclerProfile2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/textRecylerMessage2"
        app:layout_constraintStart_toStartOf="@+id/guideline92"
        app:shapeAppearanceOverlay="@style/rectangle"
        app:strokeColor="@color/purple_500" />

    <TextView
        android:id="@+id/textRecylerMessage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/convergence"
        android:padding="10dp"
        android:paddingStart="16dp"
        android:text="@string/loading"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageRecyclerProfile2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRecyclerUsername2" />

    <TextView
        android:id="@+id/textRecylerTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/loading"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textRecylerMessage2"
        app:layout_constraintEnd_toEndOf="@+id/textRecylerMessage2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />
</androidx.constraintlayout.widget.ConstraintLayout>